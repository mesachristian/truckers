<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.HomeNotLoggedInActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="235dp"
            android:layout_marginTop="20sp"
            app:srcCompat="@drawable/truck_logo" />

        <Button
            android:id="@+id/login_btn_main"
            android:layout_marginTop="80dp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:text="@string/login"
            android:textColor="@color/button_font"
            android:textSize="20dp" />

        <Button
            android:id="@+id/register_btn_main"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/register_btn_background"
            android:text="@string/register"
            android:textColor="@color/button_background"
            android:textSize="20dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>